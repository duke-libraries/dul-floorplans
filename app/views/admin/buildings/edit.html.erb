<h3>Edit <%= @building.label %></h3>
<%= form_for :building, html: {class: 'form-horizontal'} do |f| %>
	<div class="form-group">
		<%= f.label :label, {class: 'col-sm-2 control-label', for: 'buildingLabel' } %>
		<div class="col-sm-10">
			<%= f.text_field :label, {class: 'form-control', id: 'buildingLabel', placeholder: 'Enter Building Label'}%>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :sublabel, {class: 'col-sm-2 control-label', for: 'buildingSubLabel' } %>
		<div class="col-sm-10">
			<%= f.text_field :sublabel, {class: 'form-control', id: 'buildingSubLabel', placeholder: 'Enter Building Sub-Label'} %>
		</div>
	</div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<%= f.submit "Save Building", {class: 'btn btn-primary'} %>
    </div>
  </div>
<% end %>

